
<body>

<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">Vida Verde</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/realTimeProducts">Real Time Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/chat">Chat</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/products">Products</a>
          </li>
        </ul>
        {{#if user}}
        <a href="/api/sessions/logout" class="btn btn-outline-info me-2">Salir</a>
        {{else}}
        <a href="/login" class="btn btn-outline-info me-2">Ingresar</a>
        {{/if}}
      </div>
    </div>
  </nav>
</header>

<main class="container my-5">
  <div>
    <h1 class="text-center">Bienvenidos a nuestra Tienda!</h1>
    <div class="row">
      {{#each product}}
      <div class="col-md-4">
        <div class="card mb-3">
          <img src={{this.thumbnail}} class="card-img-top" alt="{{this.title}}">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">$ {{this.price}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
