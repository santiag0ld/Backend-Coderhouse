<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">Crear nueva cuenta</h1>

      <form action="/api/sessions/register" method="POST" class="form-group">
          <input type="text" name="first_name" placeholder="First Name" class="form-control mb-2">
          <input type="text" name="last_name" placeholder="Last Name" class="form-control mb-2">
          <input type="date" name="date" placeholder="Date" class="form-control mb-2">
          <input type="email" name="email" placeholder="Email" class="form-control mb-2">
          <input type="password" name="password" placeholder="Password" class="form-control mb-2">
          <button class="btn btn-primary btn-block" type="submit">Regístrate</button>
      </form>

      <p class="text-center mt-3">Ya tienes una cuenta? <a href="/login">Iniciar Sesión</a></p>
    </div>
  </div>
</div>
