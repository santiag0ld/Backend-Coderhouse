<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">Ingresar</h1>

      <form action="/api/sessions/login" method="POST" class="form-group">
          <input type="email" name="email" placeholder="Email" class="form-control mb-2">
          <input type="password" name="password" placeholder="Password" class="form-control mb-2">
          <button class="btn btn-primary btn-block" type="submit">Iniciar sesión</button>
      </form>

      <a href="/api/sessions/githubcallback" method="GET" class="btn btn-dark btn-block mt-3">Iniciar sesión con Github <i class="fab fa-github"></i></a>

      <p class="mt-3 text-center"><strong>No tienes una cuenta? </strong></p>
      <div class="text-center">
        <a href="/register" class="btn btn-primary">Regístrate</a>
      </div>
    </div>
  </div>
</div>
